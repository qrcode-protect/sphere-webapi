{
    "name"           : "sphere-webapi",
    "version"        : "1.0.0",
    "private"        : true,
    "scripts"        : {
        "dev"  : "node ace serve --watch",
        "build": "node ace build --production && cp .env build/.env; cp app.yaml build/app.yaml; cp firebase-adminsdk.json build/firebase-adminsdk.json",
        "start": "node server.js",
        "lint" : "eslint . --ext=.ts"
    },
    "eslintConfig"   : {
        "extends": [
            "plugin:adonis/typescriptApp"
        ]
    },
    "eslintIgnore"   : [
        "build"
    ],
    "devDependencies": {
        "@adonisjs/assembler"             : "^5.6.2",
        "@japa/assert"                    : "^1.3.4",
        "@japa/preset-adonis"             : "^1.0.15",
        "@japa/runner"                    : "^2.0.7",
        "@typescript-eslint/eslint-plugin": "^5.22.0",
        "@typescript-eslint/parser"       : "^5.22.0",
        "adonis-preset-ts"                : "^2.1.0",
        "class-transformer"               : "^0.5.1",
        "eslint"                          : "^8.14.0",
        "eslint-plugin-adonis"            : "^2.1.0",
        "pino-pretty"                     : "^7.6.1",
        "typescript"                      : "~4.6",
        "youch"                           : "^3.2.0",
        "youch-terminal"                  : "^2.1.3"
    },
    "dependencies"   : {
        "@adonisjs/core"          : "^5.7.5",
        "@adonisjs/repl"          : "^3.1.10",
        "@google-cloud/firestore" : "^5.0.2",
        "@sofiakb/adonis-logger"  : "^0.0.9",
        "@sofiakb/adonis-response": "^0.0.7",
        "firebase-admin"          : "^10.1.0",
        "fireorm"                 : "^0.23.3",
        "libphonenumber-js"       : "^1.9.53",
        "proxy-addr"              : "^2.0.7",
        "reflect-metadata"        : "^0.1.13",
        "source-map-support"      : "^0.5.21",
        "ts-transformer-keys"     : "^0.4.3"
    },
    "engines"        : {
        "node": "16.x",
        "npm" : "8.x"
    }
}
